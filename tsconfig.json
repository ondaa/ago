{
  "ts-node": {
    "files": true
  },
  "files": ["src/@types/global.d.ts", "src/@types/types.d.ts"],
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "allowJs": true,
    "declaration": true,
    // "declarationMap": true,
    // "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "example", "test"]
}
